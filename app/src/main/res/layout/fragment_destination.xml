<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a9b5ff">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:text="Select cards to keep"
        android:textSize="30sp"
        android:textAlignment="center"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:id="@+id/dest_cards"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6">

        <LinearLayout
            android:id="@+id/dest_card1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:background="@drawable/destination_card"
            android:orientation="vertical">

            <TextView
                android:id="@+id/card1_location1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.25"
                android:gravity="center"
                android:text="Location1"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/card1_destination_score"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="00"
                android:textSize="70sp" />

            <TextView
                android:id="@+id/card1_location2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="0.25"
                android:gravity="center"
                android:text="Location2"
                android:textSize="20sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dest_card2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:background="@drawable/destination_card"
            android:orientation="vertical">

            <TextView
                android:id="@+id/card2_location1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.25"
                android:gravity="center"
                android:text="Location1"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/card2_destination_score"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="00"
                android:textSize="70sp" />

            <TextView
                android:id="@+id/card2_location2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="0.25"
                android:gravity="center"
                android:text="Location2"
                android:textSize="20sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dest_card3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:background="@drawable/destination_card"
            android:orientation="vertical">

            <TextView
                android:id="@+id/card3_location1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.25"
                android:gravity="center"
                android:text="Location1"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/card3_destination_score"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="00"
                android:textSize="70sp" />

            <TextView
                android:id="@+id/card3_location2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="0.25"
                android:gravity="center"
                android:text="Location2"
                android:textSize="20sp"/>

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/button_continue"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:layout_gravity="center"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="Continue"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:background="@color/lightBlue"/>

    <LinearLayout
        android:id="@+id/destination_bottom_space"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="horizontal"/>

</LinearLayout>