<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#a9b5ff">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Pick at least 2 cards"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/chat_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/dest_card_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dest_card_2"
        app:layout_constraintTop_toTopOf="@+id/dest_card_2">

        <ImageView
            android:id="@+id/dest_card_1_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/destination_card" />

        <TextView
            android:id="@+id/location1_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/dest_card_1_image"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:text="Location1"
            android:textAlignment="center"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/destination_score_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/dest_card_1_image"
            android:layout_alignParentTop="true"
            android:layout_marginTop="50dp"
            android:text="00"
            android:textAlignment="center"
            android:textSize="70dp" />

        <TextView
            android:id="@+id/location2_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/dest_card_1_image"
            android:layout_alignEnd="@+id/dest_card_1_image"
            android:layout_margin="10dp"
            android:text="Location2"
            android:textAlignment="center"
            android:textSize="30dp" />
    </RelativeLayout>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/dest_card_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/dest_card_1"
        app:layout_constraintStart_toEndOf="@+id/dest_card_3"
        app:layout_constraintTop_toTopOf="@+id/dest_card_3">

        <ImageView
            android:id="@+id/dest_card_2_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/destination_card" />

        <TextView
            android:id="@+id/location1_middle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/dest_card_2_image"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:text="Location1"
            android:textAlignment="center"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/destination_score_middle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/dest_card_2_image"
            android:layout_alignParentTop="true"
            android:layout_marginTop="50dp"
            android:text="00"
            android:textAlignment="center"
            android:textSize="70dp" />

        <TextView
            android:id="@+id/location2_middle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/dest_card_2_image"
            android:layout_alignEnd="@+id/dest_card_2_image"
            android:layout_margin="10dp"
            android:text="Location2"
            android:textAlignment="center"
            android:textSize="30dp" />
    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/dest_card_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="24dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/dest_card_2"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <ImageView
            android:id="@+id/dest_card_3_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/destination_card" />

        <TextView
            android:id="@+id/location1_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/dest_card_3_image"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:text="Location1"
            android:textAlignment="center"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/destination_score_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/dest_card_3_image"
            android:layout_alignParentTop="true"
            android:layout_marginTop="50dp"
            android:text="00"
            android:textAlignment="center"
            android:textSize="70dp" />

        <TextView
            android:id="@+id/location2_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/dest_card_3_image"
            android:layout_alignEnd="@+id/dest_card_3_image"
            android:layout_margin="10dp"
            android:text="Location2"
            android:textAlignment="center"
            android:textSize="30dp" />
    </RelativeLayout>

    <Button
        android:id="@+id/button_continue"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:background="@color/lightBlue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dest_card_2" />

</android.support.constraint.ConstraintLayout>