<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/faction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.125"
            app:layout_constraintDimensionRatio="1:1"
            app:srcCompat="@drawable/race_kit" />

        <TextView
            android:id="@+id/player_name_summary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.125"
            android:text="Player"
            android:textAlignment="center"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/ships_left_summary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.125"
            android:text="Ships Left"
            android:textAlignment="center"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/ship_points_summary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.125"
            android:text="Ship Points"
            android:textAlignment="center"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/success_dest"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.125"
            android:text="Success Dest"
            android:textAlignment="center"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/fail_dest"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.125"
            android:text="Fail Dest"
            android:textColor="#CC0000"
            android:textAlignment="center"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/total_points"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.125"
            android:text="Total Points"
            android:textAlignment="center"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/longest_route"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.125"
            app:layout_constraintDimensionRatio="1:1"
            app:srcCompat="@drawable/longest_route" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>